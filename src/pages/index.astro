---
// Welcome to Astro! Everything between these triple-dash code fences
import SearchBar from "@/components/search-bar/SearchBar";
import BaseLayout from "@/layouts/BaseLayout.astro";
import DarkModeButton from "@/components/dark-mode-button";
import FilterTags from "@/components/filter-tags";
import ChallengesRender from "@/components/challenges-render";
import Footer from "@/components/footer";
---

<BaseLayout title="Interactive comments section | Frontend Mentor">
	<div class="bg-slate-100 dark:bg-slate-950 relative min-h-screen">
		<div class="max-w-5xl mx-auto">
			<section class="lg:flex lg:flex-col lg:gap-3">
				<h1
					class="text-3xl lg:text-4xl font-semibold font-serif lg:leading-none mb-3 sm:mb-0 text-center md:text-left"
				>
					Frontend Mentor Challenges
				</h1>
				<p class="opacity-55 lg:opacity-40 max-w-96 text-sm text-center md:text-left">
					These are some of the challenges of the Frontend Mentor page made with react and
					experimental tools!!
				</p>
			</section>
			<div class="flex flex-col md:flex-row gap-3">
				<SearchBar client:only />
				<DarkModeButton client:only />
			</div>
			<FilterTags client:only />
			<ChallengesRender client:only />
			<Footer client:only />
		</div>
	</div>
</BaseLayout>
